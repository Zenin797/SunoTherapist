# LTM Application - Environment Variables
# Copy this file to .env and fill in your values for sensitive configuration

# External services
LTM_SEARX_HOST=http://127.0.0.1:8080

# Local LLM configuration
# Use this to set your Ollama host if not using the default http://localhost:11434
# OLLAMA_HOST=http://localhost:11434

# Model configuration
# LTM_MODEL_NAME=meta-llama/llama-4-maverick-17b-128e-instruct

# Weather API (optional)
# OPENWEATHERMAP_API_KEY=your_weather_api_key_here

# MongoDB (Atlas) connection example (replace <db_password>)
# Use either MONGODB_URI or LTM_MONGODB_URI
MONGODB_URI=mongodb://localhost:49248/?directConnection=true

# Optional: database and collection used for memory store
LTM_MONGODB_DB=agent-memory
LTM_MONGODB_COLLECTION=memories

# Embedding Configuration
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# API Keys (leave empty if not using VoyageAI or OpenAI)
VOYAGE_API_KEY=
OPENAI_API_KEY=